<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="#fff"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="spencerstudios.com.firebasespeed.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/button_leader_board"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="16dp"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:fontFamily="sans-serif-thin"
        android:background="@drawable/text_view_background_drawable"
        android:text="@string/leader_board" />

    <TextView
        android:id="@+id/button_test_cpu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="16dp"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:fontFamily="sans-serif-thin"
        android:background="@drawable/text_view_background_drawable"
        android:text="CPU Speed Test" />

    <com.google.android.gms.common.SignInButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/google_sign_in_button"
        app:buttonSize="wide"
        app:colorScheme="dark">
    </com.google.android.gms.common.SignInButton>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:id="@+id/text_view_sign_info"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:text="@string/sign_in_info"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:textStyle="italic"
        android:id="@+id/tv_sign"
        android:text="Signed in as:"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_signed_in"/>

    <Button
        android:id="@+id/button_sign_out"
        android:layout_width="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#fff"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:background="@color/textColor"
        android:text="@string/sign_out" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_view_icon"
        android:src="@mipmap/ic_launcher"/>
</LinearLayout>
